<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ToggleButton
        android:id="@+id/charC"
        android:layout_width="103dp"
        android:layout_height="44dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:checked="true"
        android:textOff="-"
        android:textOn="+"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/numC"
        app:layout_constraintTop_toBottomOf="@+id/defEqForm" />

    <ToggleButton
        android:id="@+id/charB"
        android:layout_width="103dp"
        android:layout_height="44dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:checked="true"
        android:textOff="-"
        android:textOn="+"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/numB"
        app:layout_constraintTop_toBottomOf="@+id/defEqForm" />

    <EditText
        android:id="@+id/numC"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:ems="10"
        android:hint="ratio C"
        android:inputType="numberSigned|number|numberDecimal"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defEqForm" />

    <EditText
        android:id="@+id/numB"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:hint="ratio B"
        android:inputType="numberSigned|number|numberDecimal"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defEqForm" />

    <TextView
        android:id="@+id/defEqForm"
        android:layout_width="358dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:orientation="horizontal"
        android:text="axÂ²+ bx + c = 0"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:padding="60dp" />

    <EditText
        android:id="@+id/numA"
        android:layout_width="214dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:ems="10"
        android:hint="ratio A"
        android:inputType="numberSigned|number|numberDecimal"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defEqForm" />

    <ToggleButton
        android:id="@+id/charA"
        android:layout_width="103dp"
        android:layout_height="44dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:checked="true"
        android:textOff="-"
        android:textOn="+"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/numA"
        app:layout_constraintTop_toBottomOf="@+id/defEqForm" />

    <Button
        android:id="@+id/solveBut"
        android:layout_width="153dp"
        android:layout_height="78dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="32dp"
        android:text="Solve"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/clearBut"
        android:layout_width="117dp"
        android:layout_height="63dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="48dp"
        android:text="Clear all"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/solveBut" />
</androidx.constraintlayout.widget.ConstraintLayout>